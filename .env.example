# Service Configuration
SERVICE_NAME=fm-evidence-service
ENVIRONMENT=development
PORT=8004
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./fm_evidence.db

# File Storage Configuration
STORAGE_TYPE=local
LOCAL_UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=.log,.txt,.png,.jpg,.jpeg,.pdf,.json

# S3 Configuration (for production)
S3_ENDPOINT_URL=http://minio.default.svc.cluster.local:9000
S3_BUCKET_NAME=faultmaven-evidence
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8090"]
